<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/useroptions.xsd">
    <import>
        <categories>
            <category name="settings">
                <showorder>2</showorder>
            </category>
                <category name="settings.communication">
                    <parent>settings</parent>
                    <showorder>3</showorder>
                </category>
                    <category name="settings.communication.mail">
                        <parent>settings.communication</parent>
                    </category>
        </categories>
        <options>
            <option name="acceptNewsletter">
                <categoryname>settings.communication.mail</categoryname>
                <optiontype>boolean</optiontype>
                <defaultvalue>0</defaultvalue>
                <options>module_newslettersystem</options>
                <enableoptions>acceptNewsletterAsEmail,acceptNewsletterAsPM</enableoptions>
            </option>
            <option name="acceptNewsletterAsEmail">
                <categoryname>settings.communication.mail</categoryname>
                <optiontype>boolean</optiontype>
                <defaultvalue>1</defaultvalue>
                <options>module_newslettersystem</options>
            </option>
            <option name="acceptNewsletterAsPM">
                <categoryname>settings.communication.mail</categoryname>
                <optiontype>boolean</optiontype>
                <defaultvalue>0</defaultvalue>
                <options>module_newslettersystem</options>
            </option>
        </options>
    </import>
</data>